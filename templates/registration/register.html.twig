{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login_style') }}
{% endblock %}

{% block javascripts %}
            {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container right-panel-active">

    <!-- Sign Up -->
	<div class="container__form container--signin">
		<form method="post" class="form" id="form">

			<h2 class="form__title">S'inscrire</h2>
			<input type="email" placeholder="Email" class="input" name="email" id="inputEmail" autocomplete="email" required autofocus/>  
			<input type="password" placeholder="Password" class="input" name="password" id="inputPassword" autocomplete="current-password" required/>
			<div class="form-check">        
                <input type="checkbox" id="inputAgreeTerms" name="agreeTerms" required="required" class="form-check-input" value="1"> <label class="form-check-label required" for="agreeTerms">Agree terms</label></div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn" type="submit" value="isSubmitted" name="sub">S'inscrire</button>

		</form>
    </div>
    <div class="container__overlay">
		<div class="overlay">
			<div class="overlay__panel overlay--left">
				<button class="btn" id="signIn" onclick="location.href='{{path('app_login',)}}'">Se connecter</button>
			</div>
			<div class="overlay__panel overlay--right">
				  <button class="btn" id="signUp" onclick="location.href='{{path('app_register',)}}'">S'inscrire</button> 
			</div>
		</div>
	</div>
</div>

<button class="btn" id="home" onclick="location.href='{{path('home',)}}'">Home</button>
{% endblock %}
